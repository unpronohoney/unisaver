<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mor"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/anaSayfayaDon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/green_circle_button"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="@string/back_exp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/basaAl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/basaAl"
            android:textAllCaps="false"
            android:fontFamily="@font/basic"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/sonSilme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/basic"
            android:text="@string/silmeyiGeriAl"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/krem">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="30dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mor_border"
                        android:divider="@color/black"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/basic"
                            android:padding="4dp"
                            android:text="@string/dersNo"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:fontFamily="@font/basic"
                            android:padding="4dp"
                            android:text="@string/dersAd"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/basic"
                            android:padding="4dp"
                            android:text="@string/dersCred"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/basic"
                            android:padding="4dp"
                            android:text="@string/dersNote"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/basic"
                            android:padding="4dp"
                            android:text="@string/deleteBtn"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tablo"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginBottom="16dp"
                        android:background="#4F673AB7" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:text="@string/trans_info"
                        android:textAlignment="center"
                        android:textColor="@color/mor"
                        android:textSize="13sp"
                        android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/agnoBilgisi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="monospace"
                        android:text="@string/agnofirst"
                        android:textColor="@color/mor"
                        android:textSize="13sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/krediBilgisi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="monospace"
                        android:text="@string/credfirst"
                        android:textColor="@color/mor"
                        android:textSize="13sp"
                        android:textStyle="bold|italic" />
                </LinearLayout>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="10dp" />


                    <EditText
                        android:id="@+id/addDersAdi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:fontFamily="@font/alexandria"
                        android:hint="@string/dersAd"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/addDersCred"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:fontFamily="@font/alexandria"
                        android:hint="@string/dersCred"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <Spinner
                        android:id="@+id/addDersSpinNot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_spinner"
                        android:fontFamily="@font/alexandria"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                    <Button
                        android:id="@+id/dersEkle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/purple_circle_button"
                        android:fontFamily="@font/basic"
                        android:text="@string/butAddLec"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />


                    <Button
                        android:id="@+id/notSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/purple_circle_button"
                        android:fontFamily="@font/basic"
                        android:text="@string/uniNotes"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
