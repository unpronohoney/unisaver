<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan rengi -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#4CAF50" />

            <!-- Arka Plan Rengi -->
            <solid android:color="#4F673AB7" />



            <!-- İç Boşluk (Padding gibi çalışır) -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- Sağdaki aşağı ok simgesi -->
    <item android:gravity="end|center_vertical" android:right="5dp">
        <bitmap
            android:src="@android:drawable/arrow_down_float"
            android:tint="@color/black"
            android:gravity="center"/>
    </item>
</layer-list>